{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default Release Build",
      "description": "Release build with common Conky options",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_APCUPSD": "ON",
        "BUILD_ARGB": "ON",
        "BUILD_AUDACIOUS": "OFF",
        "BUILD_BUILTIN_CONFIG": "ON",
        "BUILD_CMUS": "ON",
        "BUILD_COLOUR_NAME_MAP": "ON",
        "BUILD_CURL": "OFF",
        "BUILD_DOCS": "OFF",
        "BUILD_EXTRAS": "OFF",
        "BUILD_HDDTEMP": "ON",
        "BUILD_HTTP": "OFF",
        "BUILD_I18N": "ON",
        "BUILD_IBM": "ON",
        "BUILD_ICAL": "OFF",
        "BUILD_ICONV": "OFF",
        "BUILD_IMLIB2": "ON",
        "BUILD_INTEL_BACKLIGHT": "OFF",
        "BUILD_IOSTATS": "ON",
        "BUILD_IPV6": "ON",
        "BUILD_IRC": "OFF",
        "BUILD_JOURNAL": "OFF",
        "BUILD_LUA_CAIRO": "ON",
        "BUILD_LUA_CAIRO_XLIB": "ON",
        "BUILD_LUA_IMLIB2": "ON",
        "BUILD_LUA_RSVG": "ON",
        "BUILD_MATH": "ON",
        "BUILD_MOC": "ON",
        "BUILD_MOUSE_EVENTS": "ON",
        "BUILD_MPD": "ON",
        "BUILD_MYSQL": "OFF",
        "BUILD_NCURSES": "ON",
        "BUILD_NVIDIA": "OFF",
        "BUILD_OLD_CONFIG": "ON",
        "BUILD_OPENSOUNDSYS": "ON",
        "BUILD_PORT_MONITORS": "ON",
        "BUILD_PULSEAUDIO": "ON",
        "BUILD_RSS": "false",
        "BUILD_TESTING": "OFF",
        "BUILD_WAYLAND": "OFF",
        "BUILD_WLAN": "OFF",
        "BUILD_X11": "ON",
        "BUILD_XDAMAGE": "ON",
        "BUILD_XDBE": "ON",
        "BUILD_XFIXES": "ON",
        "BUILD_XFT": "ON",
        "BUILD_XINERAMA": "ON",
        "BUILD_XINPUT": "OFF",
        "BUILD_XMMS2": "OFF",
        "BUILD_XSHAPE": "ON",
        "ENABLE_RUNTIME_TWEAKS": "ON",
        "ENABLE_STRICT_ALIASING": "true",
        "USE_AVX": "TRUE",
        "USE_AVX2": "TRUE",
        "USE_CCACHE": "ON",
        "USE_SSE2": "TRUE",
        "USE_SSE3": "TRUE",
        "USE_SSE4_1": "TRUE",
        "USE_SSE4_2": "TRUE",
        "USE_SSSE3": "TRUE"
      }
    },
    {
      "name": "debug",
      "inherits": "default",
      "displayName": "Debug Build",
      "description": "Debug build with symbols",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    }
  ]
}

